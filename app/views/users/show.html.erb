<h3><%= @user.first_name %>'s profile</h3>
<table class="table table-striped profile">
  <tr>
    <th>First name:</th>
    <td><%= @user.first_name %></td>
  </tr>
  <tr>
    <th>Last name:</th>
    <td><%= @user.last_name %></td>
  </tr>
  <tr>
    <th>Email:</th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th>Location:</th>
    <td><%= @user.location %></td>
  </tr>
  <tr>
    <th>State:</th>
    <td><%= @user.state %></td>
  </tr>
</table>
 <%= link_to "Edit", "/users/edit", class: "btn btn-info btn-sm" %>
