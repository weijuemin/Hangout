<div class="row">
  <form action="/users/login" method="post" class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 new">
    <h3>Login</h3>
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    
    <div class="form-group">
      <label for="lg_email">Email</label>
      <input type="text" name="user[email]" id="lg_email" class="form-control" placeholder="Email">    
    </div>
    
    <div class="form-group">
      <label for="lg_pw">Password</label>
      <input type="password" name="user[password]" id="lg_pw" class="form-control" placeholder="Password">
    </div>

    <input type="submit" name="submit" value="Login" class="btn btn-primary">
  </form>
</div>
<button class="btn btn-link btn-sm switch"><a href="/users/register">Not a member? Register</a></button>
